{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/styleCreateArticle.css') }}">

    {{ parent() }}
{% endblock %}

    {% block body %}

        <div class="container" style="margin-top: 10%; text-align: center">

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="jumbotron">
                <H1>Edytuj komentarz</H1>
                {{ form_start(form) }}
                {{ form_errors(form.text, {'attr': {'class': 'error'}}) }}
                {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}<br/>

                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}


                {{ form_end(form) }}
            </div>
        </div>
    {% endblock %}